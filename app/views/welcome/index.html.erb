<section id="categories">
  <% @categories.each_slice(2) do |category| %>
    <div class="row">
      <% category.each do |category| %>
        <div id="cat" class="col s6" style="background: url('<%= category.image %>');">
          <div class="category-content">
            <h5><%= category.title %></h5>
          </div>
            <span class="new badge"><%= category.title.length %></span>
        </div>
      <% end %>
    </div>
  <% end %>
</section>
