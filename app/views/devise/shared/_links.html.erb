
  <div class="col-sm-12 text-center">
  <br>
  <hr>
    <%- if controller_name != 'sessions' %>
      <p>Already A Member?</p>
      <%= link_to "Log in", new_session_path(resource_name), class: 'btn red' %><br />
    <% end -%>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn' %><br />
    <% end -%>
  </div>
  <br>

  <div class="col-sm-12 text-center">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn red' %><br />
    <% end -%>
  </div>
  <br><br>