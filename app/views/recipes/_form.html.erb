<%= form_for([@category, @recipe]) do |f| %>
	Title: <%= f.text_field :title %>
	Description: <%= f.text_field :description %>
	
	Image: <%= f.text_field :image %>


Ingredients:
	<%= f.nested_fields_for :ingredients do |ff| %>
          <%= ff.remove_nested_fields_link %>
          <%= ff.text_field :name %>
    <%= f.add_nested_fields_link :ingredients, 'Add Ingredient', class: "btn", role: "button" %>


<%= f.submit 'Add Recipe', class: 'btn' %>
<% end %>


	
    

