<div class="row" id="rec-container">
      
    <div id="recipe" class="col s12" style="background: url('<%= @recipe.image %>');">
      <div>
        <h5><%= @recipe.title %></h5>
        <% if current_user %>
  <%= link_to "favorite",   favorite_recipe_path(@recipe, type: "favorite"), method: :put %>
  <%= link_to "unfavorite", favorite_recipe_path(@recipe, type: "unfavorite"), method: :put %>
<% end %>
      </div>
    </div>

    <%= render 'meta' %>
    
    <div id="recipe-content" class="col s12"> 
        <h5>Description</h5>
          <%= @recipe.description %>
        <h5>Ingredients</h5>
          <ul>
            <li><%= @recipe.ingredients %></li>
          </ul>
        <h5>Instructions</h5>
        <%= @recipe.instructions %>
    </div>

<%= link_to 'Add a new recipe to this Category', new_category_recipe_path(@recipe) %>

    <%= render 'foot' %>

    

</div>
  
  